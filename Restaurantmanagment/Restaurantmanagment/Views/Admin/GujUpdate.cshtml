@model Restaurantmanagment.Models.Entity.Gujaratidish.Gujdish

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@using (Html.BeginForm("GujUpdate", "Admin", FormMethod.Post , new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section>
        <div class="container">
            <h4> <b> Gujaratidish Edit </b></h4>
            <hr>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Image </label>
                <div class="col-sm-6">
                    <img src="~/assets/@Model.gimage" width="50" height="50" />
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.gimage, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Name </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.gname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.gname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Price </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.gprice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.gprice, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </section>

    <hr class="">
}

