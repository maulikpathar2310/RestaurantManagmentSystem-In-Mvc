@model Restaurantmanagment.Models.Viewmodel.UserRegViewmodel

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Panjabi dish page</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Panjabi dish <button class="btn btn-primary float-right"> @Html.ActionLink("New Record", "PanCreate", "Admin", new { @class = "collapse-item", @style = "color:white;" }) </button> </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th> id </th>
                            <th> image </th>
                            <th> name </th>
                            <th> price </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    @if (Model.Pan_list.Count > 0)
                    {
                        
                        foreach (var item in Model.Pan_list)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.pid</td>
                                    <td>
                                        <img src="~/assets/@item.image" width="100" height="100" />
                                    </td>
                                    <td>@item.name</td>
                                    <td>@item.price</td>
                                    <td>
                                        @Html.ActionLink("Edit", "PanUpdate", new { @id = item.pid }, new { @class = "btn btn-primary btn-sm" })
                                        |
                                        @Html.ActionLink("Delete", "PanDelete", new { @id = item.pid }, new { @class = "btn btn-primary btn-sm" })

                                    </td>
                                </tr>
                            </tbody>
                        
                        }
                    }

                </table>
            </div>
        </div>
    </div>
</div>




