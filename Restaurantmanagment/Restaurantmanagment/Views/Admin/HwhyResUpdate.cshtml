@model Restaurantmanagment.Models.Entity.Homepage.H_WhyChooseRes

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}


@using (Html.BeginForm("HwhyResUpdate", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section>
        <div class="container">
            <h4> <b>Why Choose Our Restaurant</b></h4>
            <hr>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.wid)
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Number </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.wnumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.wnumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 ">Title</label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.wtitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.wtitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 ">Description</label>
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => model.wdescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.wdescription, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </section>
    <hr class="">
}

