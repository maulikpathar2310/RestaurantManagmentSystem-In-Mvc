@model Restaurantmanagment.Models.Viewmodel.UserRegViewmodel

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}


@using(Html.BeginForm("PanCreate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section>
        <div class="container">
            <h4> <b> Panjabidish Create </b></h4>
            <hr>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Image </label>
                <div class="col-sm-6">
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.Pan_obj.image, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Name </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Pan_obj.name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Pan_obj.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Price </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Pan_obj.price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Pan_obj.price, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </section>

    <hr class="">
}


