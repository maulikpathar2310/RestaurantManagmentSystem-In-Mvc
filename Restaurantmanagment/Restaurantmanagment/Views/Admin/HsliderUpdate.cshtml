@model Restaurantmanagment.Models.Entity.Homepage.HomeSlider

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}



@using (Html.BeginForm("HsliderUpdate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section>
        <div class="container">
            <h4> <b> Slider Edit </b></h4>
            <hr>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.sid)

            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Image </label>
                <div class="col-sm-6">
                    <img src="~/assets/img/Homepage/Slider/@Model.image" width="100" height="100" />
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 ">Title</label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Price </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Description </label>
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => model.description, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </section>
    <hr class="">

}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
