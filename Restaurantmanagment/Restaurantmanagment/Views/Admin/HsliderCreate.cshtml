@model Restaurantmanagment.Models.Viewmodel.UserRegViewmodel

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}



@using (Html.BeginForm("HsliderCreate", "Admin",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section>
        <div class="container">
            <h4> <b> Slider Create In Home Page </b></h4>
            <hr>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Image </label>
                <div class="col-sm-6">
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.Hslider_obj.image, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Title </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Hslider_obj.title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Hslider_obj.title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Price </label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Hslider_obj.price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Hslider_obj.price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-2 col-md-4 "> Description </label>
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => model.Hslider_obj.description, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Hslider_obj.description, "", new { @class = "text-danger" })
                </div>
            </div>           

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </section>
    <hr class="">

}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
