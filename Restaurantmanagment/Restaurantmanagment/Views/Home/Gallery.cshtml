@model Restaurantmanagment.Models.Viewmodel.UserRegViewmodel

<section id="gallery" class="gallery">

    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Gallery</h2>
            <p>Some photos from Our Restaurant</p>
        </div>
    </div>

    <div class="container-fluid" data-aos="fade-up" data-aos-delay="100">

        <div class="row g-0">

            @foreach(var item in Model.Gal_list)
            {
                <div class="col-lg-3 col-md-4">
                    <div class="gallery-item">
                        <a href="~/assets/img/g/@item.image" class="gallery-lightbox" data-gall="gallery-item">
                            <img src="~/assets/img/g/@item.image" alt="" class="img-fluid" />
                        </a>
                    </div>
                </div>
            }       
           
        </div>

    </div>
</section>

